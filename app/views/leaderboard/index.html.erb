<h1>Leaderboard for <%= @sport.name %></h1>

<table class="table table-striped">
	<thead>
		<th>Rank</th>
		<th>Name</th>
		<th>Played</th>
		<th class="noiphone">Wins</th>
		<th class="noiphone">Losses</th>
		<th class="noiphone">%</th>
		<th>Streak</th>
	</thead>
	<tbody>
		<% @leaders.each do |leader| %>
		<tr>
			<td><%= leader.value %></td>
			<td><%= link_to leader.name, leader %></td>
			<td><%= leader.games.length %></td>
			<td class="noiphone"><%= leader.wins.length %></td>
			<td class="noiphone"><%= leader.losses.length %></td>
			<td class="noiphone"><%= leader.percentage %></td>
			<td><%= leader.streak %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "New Game", new_game_path, :class => "btn btn-primary" %>
<%= link_to "New Player", new_player_path, :class => "btn btn-primary" %>